{
    "name": "GraphNN",
    "n_gpu": 1,
    "arch": {
        "type": "GraphNeuralNet",
        "args": {
            "link_state_dim": 32,
            "path_state_dim": 16,
            "fc1_dim": 64,
            "fc2_dim": 64,
            "output_dim": 1,
            "dropout_rate": 0.5,
            "T": 8,
            "link_capacity": 10
        }
    },
    "data_loader": {
        "type": "NetDataLoader",
        "args": {
            "data_dir": "/home/yangzhe/Documents/nsfnet",
            "prediction_targets": [
                "delay"
            ],
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0,
            "transform": {
                "type": "normal",
                "mean_TM": 0.475,
                "std_TM": 0.259,
                "mean_delay": 1.037,
                "std_delay": 1.673,
                "mean_drops": 315.725,
                "std_drops": 1137.143,
                "mean_jitter": 0.25,
                "std_jitter": 0.422
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.1,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "relative_error",
        "pearson_correlation",
        "absolute_error"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [
                3,
                6,
                9,
                12
            ],
            "gamma": 0.3
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "./saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}